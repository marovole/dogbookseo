---
import { siteConfig, type Locale } from '@/config/site';

interface Props {
  title: string;
  description: string;
  lang: Locale;
  slug?: string;
  type?: 'website' | 'article';
  image?: string;
  publishedAt?: string;
  availableLanguages?: Locale[];
}

const {
  title,
  description,
  lang,
  slug = '',
  type = 'website',
  image,
  publishedAt,
  availableLanguages = [lang],
} = Astro.props;

const fullTitle = `${title} | ${siteConfig.name}`;
const canonicalUrl = `${siteConfig.url}/${lang}${slug ? `/${slug}` : ''}`;
const ogImage = image || `${siteConfig.url}/og-default.png`;

function getAlternateUrl(locale: Locale): string {
  return `${siteConfig.url}/${locale}${slug ? `/${slug}` : ''}`;
}
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:site_name" content={siteConfig.name} />
<meta property="og:locale" content={lang.replace('-', '_')} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalUrl} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImage} />

<!-- Article specific -->
{type === 'article' && publishedAt && (
  <meta property="article:published_time" content={publishedAt} />
)}

<!-- Hreflang Tags -->
{availableLanguages.map((locale) => (
  <link rel="alternate" hreflang={locale} href={getAlternateUrl(locale)} />
))}
<link rel="alternate" hreflang="x-default" href={getAlternateUrl('en')} />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1" />
