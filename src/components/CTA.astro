---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  external?: boolean;
  class?: string;
}

const { 
  href, 
  variant = 'primary', 
  size = 'md',
  external = false,
  class: className = ''
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-semibold rounded-lg transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[var(--color-accent)] focus-visible:ring-offset-[var(--color-ink)]';

const variants = {
  primary: 'bg-[var(--color-accent)] text-[var(--color-ink)] hover:bg-[var(--color-accent-dim)] active:scale-[0.98]',
  secondary: 'bg-[var(--color-surface-elevated)] text-[var(--color-paper)] border border-[var(--color-border)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)]',
  ghost: 'text-[var(--color-paper)] hover:text-[var(--color-accent)] hover:bg-[var(--color-surface-elevated)]'
};

const sizes = {
  sm: 'px-3 py-1.5 text-sm gap-1.5',
  md: 'px-5 py-2.5 text-sm gap-2',
  lg: 'px-6 py-3 text-base gap-2'
};

const externalAttrs = external ? {
  target: '_blank',
  rel: 'noopener noreferrer nofollow'
} : {};
---

<a
  href={href}
  class:list={[baseStyles, variants[variant], sizes[size], className]}
  {...externalAttrs}
>
  <slot />
  {external && (
    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
    </svg>
  )}
</a>
