---
import Base from '@/layouts/Base.astro';
import CTA from '@/components/CTA.astro';
import { siteConfig } from '@/config/site';
---

<Base title="Predict the Future" lang="en">
  <!-- Hero Section -->
  <section class="relative min-h-[80vh] flex items-center overflow-hidden">
    <!-- Background Grid -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: linear-gradient(var(--color-border) 1px, transparent 1px), linear-gradient(90deg, var(--color-border) 1px, transparent 1px); background-size: 60px 60px;"></div>
    </div>
    
    <!-- Accent Glow -->
    <div class="absolute top-1/4 -right-1/4 w-[600px] h-[600px] rounded-full bg-[var(--color-accent)] opacity-10 blur-[120px]"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="max-w-3xl space-y-8">
        <!-- Eyebrow -->
        <div class="animate-fade-in-up stagger-1">
          <span class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-[var(--color-surface-elevated)] border border-[var(--color-border)] text-sm font-mono text-[var(--color-accent)]">
            <span class="w-2 h-2 rounded-full bg-[var(--color-accent)] animate-pulse"></span>
            Minority Game
          </span>
        </div>
        
        <!-- Headline -->
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight animate-fade-in-up stagger-2">
          <span class="block">Predict the</span>
          <span class="block text-gradient">Unpredictable</span>
        </h1>
        
        <!-- Subheadline -->
        <p class="text-xl sm:text-2xl text-[var(--color-paper)] opacity-70 max-w-xl animate-fade-in-up stagger-3">
          Join the minority to win. Make predictions on real-world events and outsmart the crowd.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-wrap items-center gap-4 animate-fade-in-up stagger-4">
          <CTA href={siteConfig.appUrl} size="lg" external>
            Start Playing
          </CTA>
          <CTA href="/en/topics/" variant="secondary" size="lg">
            Explore Topics
          </CTA>
        </div>
        
        <!-- Stats -->
        <div class="flex flex-wrap gap-8 pt-8 border-t border-[var(--color-border)] animate-fade-in-up stagger-4">
          <div>
            <div class="text-3xl font-bold font-[family-name:var(--font-display)] text-[var(--color-accent)]">20+</div>
            <div class="text-sm text-[var(--color-paper)] opacity-60">Daily Topics</div>
          </div>
          <div>
            <div class="text-3xl font-bold font-[family-name:var(--font-display)] text-[var(--color-accent)]">5</div>
            <div class="text-sm text-[var(--color-paper)] opacity-60">Languages</div>
          </div>
          <div>
            <div class="text-3xl font-bold font-[family-name:var(--font-display)] text-[var(--color-accent)]">∞</div>
            <div class="text-sm text-[var(--color-paper)] opacity-60">Possibilities</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-24 relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">
          How the <span class="text-[var(--color-accent)]">Minority Game</span> Works
        </h2>
        <p class="text-lg text-[var(--color-paper)] opacity-70 max-w-2xl mx-auto">
          A game theory experiment where thinking differently pays off.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Step 1 -->
        <div class="relative p-6 rounded-xl bg-[var(--color-surface)] border border-[var(--color-border)] group hover:border-[var(--color-accent)] transition-colors">
          <div class="absolute -top-4 left-6 w-8 h-8 rounded-lg bg-[var(--color-accent)] flex items-center justify-center text-[var(--color-ink)] font-bold">
            1
          </div>
          <h3 class="text-xl font-bold mt-4 mb-3">Choose a Topic</h3>
          <p class="text-[var(--color-paper)] opacity-70">
            Browse prediction topics from sports, politics, entertainment, and more.
          </p>
        </div>

        <!-- Step 2 -->
        <div class="relative p-6 rounded-xl bg-[var(--color-surface)] border border-[var(--color-border)] group hover:border-[var(--color-accent)] transition-colors">
          <div class="absolute -top-4 left-6 w-8 h-8 rounded-lg bg-[var(--color-accent)] flex items-center justify-center text-[var(--color-ink)] font-bold">
            2
          </div>
          <h3 class="text-xl font-bold mt-4 mb-3">Make Your Prediction</h3>
          <p class="text-[var(--color-paper)] opacity-70">
            Pick Yes or No. But remember — you want to be in the minority!
          </p>
        </div>

        <!-- Step 3 -->
        <div class="relative p-6 rounded-xl bg-[var(--color-surface)] border border-[var(--color-border)] group hover:border-[var(--color-accent)] transition-colors">
          <div class="absolute -top-4 left-6 w-8 h-8 rounded-lg bg-[var(--color-accent)] flex items-center justify-center text-[var(--color-ink)] font-bold">
            3
          </div>
          <h3 class="text-xl font-bold mt-4 mb-3">Win by Being Different</h3>
          <p class="text-[var(--color-paper)] opacity-70">
            If your choice is in the minority when the event resolves, you win!
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 relative">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="p-12 rounded-2xl bg-gradient-to-br from-[var(--color-surface)] to-[var(--color-surface-elevated)] border border-[var(--color-border)] relative overflow-hidden">
        <!-- Glow Effect -->
        <div class="absolute -top-1/2 left-1/2 -translate-x-1/2 w-[400px] h-[400px] rounded-full bg-[var(--color-accent)] opacity-10 blur-[100px]"></div>
        
        <div class="relative">
          <h2 class="text-3xl sm:text-4xl font-bold mb-4">
            Ready to Think Different?
          </h2>
          <p class="text-lg text-[var(--color-paper)] opacity-70 mb-8 max-w-xl mx-auto">
            Join thousands of players making predictions on real-world events.
          </p>
          <CTA href={siteConfig.appUrl} size="lg" external class="animate-pulse-glow">
            Launch the App
          </CTA>
        </div>
      </div>
    </div>
  </section>
</Base>
