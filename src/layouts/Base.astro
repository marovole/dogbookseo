---
import '@/styles/global.css';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import SEOHead from '@/components/SEOHead.astro';
import type { Locale } from '@/config/site';

interface Props {
  title: string;
  description?: string;
  lang?: Locale;
  slug?: string;
  type?: 'website' | 'article';
  image?: string;
  publishedAt?: string;
  availableLanguages?: Locale[];
}

const { 
  title, 
  description = 'Predict the future with Minority Game - Dogbooks',
  lang = 'en',
  slug,
  type = 'website',
  image,
  publishedAt,
  availableLanguages,
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&family=IBM+Plex+Sans:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <SEOHead 
      title={title}
      description={description}
      lang={lang}
      slug={slug}
      type={type}
      image={image}
      publishedAt={publishedAt}
      availableLanguages={availableLanguages}
    />
  </head>
  <body class="min-h-screen flex flex-col noise-overlay">
    <Header lang={lang} />
    <main class="flex-1 relative z-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>
