---
import '@/styles/global.css';
// Local fonts for performance optimization (LCP)
import '@fontsource/space-grotesk/400.css';
import '@fontsource/space-grotesk/500.css';
import '@fontsource/space-grotesk/700.css';
import '@fontsource/ibm-plex-sans/400.css';
import '@fontsource/ibm-plex-sans/500.css';
import '@fontsource/ibm-plex-sans/600.css';
import '@fontsource/jetbrains-mono/400.css';
import '@fontsource/jetbrains-mono/500.css';

import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import SEOHead from '@/components/SEOHead.astro';
import type { Locale } from '@/config/site';

interface Props {
  title: string;
  description?: string;
  lang?: Locale;
  slug?: string;
  type?: 'website' | 'article';
  image?: string;
  publishedAt?: string;
  availableLanguages?: Locale[];
  category?: string;
}

const { 
  title, 
  description = 'Predict the future with Minority Game - Dogbooks',
  lang = 'en',
  slug,
  type = 'website',
  image,
  publishedAt,
  availableLanguages,
  category,
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.svg" />
    <link rel="manifest" href="/manifest.json" />
    
    <SEOHead 
      title={title}
      description={description}
      lang={lang}
      slug={slug}
      type={type}
      image={image}
      publishedAt={publishedAt}
      availableLanguages={availableLanguages}
      category={category}
    />
    
    <!-- Slot for structured data and other head elements -->
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col noise-overlay">
    <Header lang={lang} />
    <main class="flex-1 relative z-10">
      <slot />
    </main>
    <Footer lang={lang} />
    
    <!-- Service Worker Registration -->
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js').catch(() => {});
        });
      }
    </script>
  </body>
</html>
